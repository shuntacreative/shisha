<%= render "shared/header" %>
<h2>Photos#edit</h2>
<span>現在ログイン中のユーザー：<%= current_user.nickname %></span>
<%= form_for(@photo, url: photo_path(@photo)) do |f| %>
    
    <div>
        <%= f.label :イメージ %><br>
        <%= f.file_field :image, :placeholder =>"#{@photo.image}" %>
    </div>
    <div>
        <%= f.label :お店の名前 %><br>
        <%= f.text_field :title, autofocus: true, :placeholder =>"#{@photo.title}" %>
    </div>
    <div>
        <%= f.label :場所 %><br>
        <%= f.text_field :place, autofocus: true, :placeholder =>"#{@photo.place}" %>
    </div>
    <div>
        <%= f.label :説明 %><br>
        <%= f.text_field :discription, autofocus: true, :placeholder =>"#{@photo.discription}" %>
    </div>
    <div><%= f.submit "更新する" %></div>

    
<% end %>
<%= render "shared/footer" %>